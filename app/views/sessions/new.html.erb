<h1>ログイン</h1>

<% if flash[:alert] %>
  <div style="color: red;">
    <%= flash[:alert] %>
  </div>
<% end %>

<% if flash[:alerts] %>
  <div style="color: red;">
    <ul>
      <% flash[:alerts].each do |alert| %>
        <li><%= alert %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if flash[:notice] %>
  <div style="color: green;">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= form_with url: login_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :email, "メールアドレス" %>
    <%= form.email_field :email, required: true %>
  </div>

  <div>
    <%= form.label :password, "パスワード" %>
    <%= form.password_field :password, required: true %>
  </div>

  <div>
    <%= form.submit "ログイン" %>
  </div>
<% end %>
