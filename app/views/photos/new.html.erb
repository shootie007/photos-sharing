<%= render "shared/logout_link" %>

<h1>写真アップロード</h1>

<% if @photo.errors.any? %>
  <div style="color: red;">
    <ul>
      <% @photo.errors.each do |error| %>
        <li><%= error.message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @photo, url: photos_path, local: true, multipart: true do |form| %>
  <div>
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title, required: true, maxlength: 30 %>
  </div>

  <div>
    <%= form.label :image, "画像ファイル" %>
    <%= form.file_field :image, required: true, accept: "image/*" %>
  </div>

  <div>
    <%= form.submit "アップロード" %>
    <%= link_to "キャンセル", photos_path %>
  </div>
<% end %>

